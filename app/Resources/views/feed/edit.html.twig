{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="main container main-container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">
                    <h2>New Feed</h2>
                </div>
                {{ form_start(edit_form, {'attr':{'novalidate':'novalidate','role':'form'}}) }}
                <h4 class="text-danger">{{ form_errors(edit_form) }}</h4>

                <fieldset>
                    <div class="form-group">
                        {{ form_label(edit_form.title) }}
                        {{ form_widget(edit_form.title, {'attr': {'class':'form-control','placeholder':'Title' }}) }}
                        <span class="text-danger">{{ form_errors(edit_form.title) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.body) }}
                        {{ form_widget(edit_form.body, {'attr': {'class':'form-control', 'placeholder':'Description'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.body) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.image) }}
                        {{ form_widget(edit_form.image, {'attr': {'class':'form-control', 'placeholder':'Image'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.image) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.source) }}
                        {{ form_widget(edit_form.source, {'attr': {'class':'form-control', 'placeholder':'Source'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.source) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.publisher) }}
                        {{ form_widget(edit_form.publisher, {'attr': {'class':'form-control', 'placeholder':'Publisher'}}) }}
                        <span class="text-danger">{{ form_errors(edit_form.publisher) }}</span>
                    </div>
                </fieldset>
                <p class="form-horizontal">
                    {{ form_widget(edit_form.save, {'label':'Edit Feed','attr':{'class':'btn btn-success'}}) }}

                    {{ form_end(edit_form) }}

                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete Feed" class="btn btn-danger"/>
                    {{ form_end(delete_form) }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
